pipeline:
  agent: any
  stages:
    - stage: 'BUILD'
      steps:
        - script: |
            echo "Nom: $(USER_NAME)"
            echo "Mois: $(MOIS)"
            echo "Jour: $(JOUR)"
    - stage: 'JANVIER'
      condition: and(succeeded(), eq(variables['MOIS'], 'Janvier'))
      steps:
        - script: |
            if [ $(US01) -eq 1 ]; then
              echo "Bravo pour avoir décrit ta journée une fois cette semaine !"
            else
              echo "Courage, tu vas y arriver !"
            fi
        - script: |
            if [ $(US02) -ge 3 ]; then
              echo "Bravo pour avoir décrit ta journée trois fois cette semaine !"
            elif [ $(US02) -ge 1 ]; then
              echo "Courage, tu vas y arriver !"
            fi
        - script: |
            if [ $(US03) -eq 30 ]; then
              echo "Bravo pour avoir décrit toutes tes journées du mois !"
            else
              echo "Courage, tu vas y arriver !"
            fi
    - stage: 'FEVRIER'
      condition: and(succeeded(), eq(variables['MOIS'], 'Février'))
      steps:
        - script: |
            if [ $(US04) -eq 1 ]; then
              echo "Bravo pour avoir fait un moodboard sur Pinterest !"
            else
              echo "Courage, tu vas y arriver !"
            fi
        - script: |
            if [ $(US05) -eq 1 ]; then
              echo "Bravo pour avoir réaménagé une pièce selon ton moodboard !"
            else
              echo "Courage, tu vas y arriver !"
            fi
        - script: |
            if [ $(US06) -ge 3 ]; then
              echo "Bravo pour avoir acheté et installé au moins trois éléments de décoration !"
            else
              echo "Courage, tu vas y arriver !"
            fi
variables:
  USER_NAME: ''
  MOIS: ''
  JOUR: ''
  US01: 0
  US02: 0
  US03: 0
  US04: 0
  US05: 0
  US06: 0
