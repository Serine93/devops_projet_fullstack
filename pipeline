                                if (0 != progress){
                                    echo "You're making progress on learning to invest! Keep going—it’s an important skill for your future."
                                } else {
                                    echo "It's not too late to start! Motivation is the key."
                                }
                            }
                        
                            break

                        // 2nd parameter dependent on 1st + progression format throughout the mois
                        case 'Novembre':

                            if (params.UKULELE?.toBoolean()) {
                                echo "Congratulations! You bought your ukulele and you're off to a great start!"
                            } else {
                                if (day < 5) {
                                    echo "Don't forget to buy a ukulele! Starting early will help you achieve your Novembre goal."
                                } else if (day == 5) {
                                    echo "It's not too late! Grab a ukulele today and start your musical journey."
                                } else {
                                    echo "A bit behind, aren't we? To achieve your Novembre goal, you need a ukulele. Time to get one and get started!"
                                }
                            }

                            def progressBar = { progress ->
                                def filled = "=" * (progress / 10 as int)
                                def empty = " " * (10 - (progress / 10 as int))
                                return "|${filled}${empty}| ${progress}%"
                            }
                            def progress = 0

                            if (params.CHORDS?.toBoolean()) {
                                progress = 100
                                echo "Chords: ${progressBar(progress)}"
                                if (!params.UKULELE?.toBoolean()) {
                                    echo "Have you been practicing on another instrument? Keep going, but don’t forget to get a ukulele!"
                                } 
                                echo "Congratulations on mastering the four chords G M, D M, E m, and C M! You're ready to play some great tunes!"
                            } else { 
                                if (params.UKULELE?.toBoolean()) {
                                    def completedChords = input(
                                        message: "Enter the number of chords you've mastered so far (out of 4):",
                                        parameters: [
                                            string(name: 'COMPLETED_CHORDS', description: 'Number of mastered chords', defaultValue: '0')
                                        ]
                                    ) as int
                                    def totalChords = 4
                                    progress = (completedChords / totalChords) * 100
                                    echo "Chords: ${progressBar(progress as int)}"
                                } else {
                                    def totalChords = 4
                                    progress = (0 / totalChords) * 100
                                    echo "Chords: ${progressBar(progress as int)}"
                                }
                                if (0 != progress && params.UKULELE?.toBoolean()){
                                    echo "You're on your way to mastering the chords! Keep practicing—it’s all about consistency."
                                } else if (0 != progress && !params.UKULELE?.toBoolean()){
                                    echo "Have you been practicing on another instrument? Keep going, but don’t forget to get a ukulele!"
                                } else if (progress == 0 && params.UKULELE?.toBoolean()){
                                    echo "It's not too late to start! Motivation is the key."
                                } else {
                                    echo "Can't start without a ukulele? Buy one!"
                                }
                            }
                        
                            break

                        case 'Decembre':
                        
                            if (params.ZEN?.toBoolean()) {
                                echo "Congratulations! You’ve created a 'zen' place at home. What a great way to start the mois!"
                            } else {
                                if (day < 5) {
                                    echo "Don’t forget to prepare a 'zen' place at home! A peaceful space can make all the difference."
                                } else if (day == 5) {
                                    echo "It’s not too late! Create your 'zen' place today and bring calm to your Decembre."
                                } else {
                                    echo "Decembre is moving fast—don’t miss the chance to create your 'zen' place this year!"
                                }
                            }
                        
                            if (params.PLAYLIST?.toBoolean()) {
                                echo "Congratulations! You’ve chosen a playlist to accompany your relaxation moments. Time to unwind!"
                            } else {
                                if (day < 5) {
                                    echo "Don’t forget to choose a playlist to accompany your relaxation moments! Music can set the perfect mood."
                                } else if (day == 5) {
                                    echo "It’s not too late! Choose your playlist today and enhance your relaxation time."
                                } else {
                                    echo "Decembre is flying by—don’t miss the chance to curate your playlist for relaxation this year!"
                                }
                            }
                        
                            break
    
                    }
                }
            }
        }
    }
}
