                            if (params.VOLUNTEER?.toBoolean()) {
                                echo "Amazing! You've volunteered this month. Thank you for making a difference!"
                            } else {
                                echo "Remember to volunteer this month! Helping others is a great way to spread kindness and make an impact."
                            }
                        
                            if (params.POST_IT?.toBoolean()) {
                                echo "Wonderful! You've brightened someone's day by leaving a kind post-it. Such a thoughtful gesture!"
                            } else {
                                if (day < 22) {
                                    echo "Don't forget to leave a kind post-it on your colleagues' desks before going on vacation! It’s a small action that can bring big smiles."
                                } else if (day == 22) {
                                    echo "It's not too late! Leave a kind post-it today to brighten someone’s day before your holidays."
                                } else {
                                    echo "April is almost over, but there's still time to spread kindness in another way!"
                                }
                            }
                        
                            if (params.BOUQUET?.toBoolean()) {
                                echo "Beautiful! You've made a bouquet of wildflowers for your parents. What a lovely gesture!"
                            } else {
                                if (day < 20) {
                                    echo "Don’t forget to gather wildflowers and create a bouquet for your parents before their holidays in Japan. It’s a thoughtful way to show love."
                                } else if (day == 20) {
                                    echo "It’s not too late! Make a bouquet today and surprise your parents with a beautiful gesture before their flight to Japan tomorrow."
                                } else {
                                    echo "The month is nearly over and your parents went on vacation—don’t miss the chance to make a bouquet of wildflowers for your Grandma instead!"
                                }
                            }

                            break

                        case 'May':

                            if (params.SUSHI?.toBoolean()) {
                                echo "Fantastic! You’ve taken a sushi lesson with a sushi chef. Your culinary skills are leveling up!"
                            } else {
                                if (day < 25) {
                                    echo "Don’t forget to take a sushi lesson with a sushi chef before he returns to Japan! It’s a fun way to learn something new this May."
                                } else if (day == 25) {
                                    echo "It’s not too late! Sign up for a sushi lesson with a sushi chef today (before he returns to Japan) and make your May memorable."
                                } else {
                                    echo "May is flying by and the sushi chef returned to Japan—don’t miss the chance to take another cooking lesson!"
                                }
                            }
                        
                            if (params.WEEKEND?.toBoolean()) {
                                echo "Awesome! You’ve been on a road trip weekend. What a great way to unwind and explore!"
                            } else {
                                if (day < 30) {
                                    echo "Don’t forget to plan a road trip weekend this May! The open road is calling."
                                } else {
                                    echo "It’s not too late! Take a road trip this weekend and enjoy the last days of May!"
